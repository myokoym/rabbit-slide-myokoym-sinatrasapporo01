= トップページ

  # coderay ruby

  get "/" do
    @params ||= {}
    @params[:source] = slide_source
    haml :index
  end

= slide_source

  # coderay ruby

  = TITLE

  : author
  Your Name
  : date
  #{Time.now.strftime("%Y/%m/%d")}

  = FIRST SLIDE

  * ITEM 1
  * ITEM 2

= フォーム（Haml）

  # coderay ruby

  %form{:action => url("/convert", false, true),
        :method => "post"}
    %p
      %textarea{:name => "source",
                :cols => 50,
                :rows => 10}= @params[:source]
    %p
      %input{:type  => "text",
             :name  => "filename",
             :size  => 30,
             :value => @params[:filename]}
    %p
      %input{:type => "submit"}

= PDF生成

  # coderay ruby

  post "/convert" do
    @download_url = convert(params[:source],
                            params[:filename])
    @params = params
    haml :index
  end

= Rabbit.run

  # coderay ruby

  def convert(source, filename)
    ...
    Tempfile.open(["rab2pdf", ".rab"]) do |tempfile|
      tempfile.puts(source)
      tempfile.flush
      Rabbit::Command::Rabbit.run("--print",
                                  "--output-filename",
                                  pdf_path,
                                  tempfile.path)
    end
    ...
  end

